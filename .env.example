# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# GPS Microservices
NEXT_PUBLIC_GPS_SERVICE_URL=http://localhost:3002/api/gps
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:3003/api/users
NEXT_PUBLIC_TRACKING_SERVICE_URL=http://localhost:3004/api/tracking
NEXT_PUBLIC_REPORTS_SERVICE_URL=http://localhost:3005/api/reports

# WebSocket for Real-time tracking
NEXT_PUBLIC_WS_URL=ws://localhost:3006

# Map Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security
NEXT_PUBLIC_ENABLE_HTTPS=false
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000

# Logging
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_ANALYTICS=false